{
  "name": "ISO 8601 Duration",
  "reference": "https://en.wikipedia.org/wiki/ISO_8601",
  "pattern": "^P(([0-9]+Y)?([0-9]+M)?([0-9]+D)?T([0-9]+H)?([0-9]+M)?([0-9]+(?:[,\\.][0-9]+)?S)|([0-9]+Y)?([0-9]+M)?([0-9]+D)?T([0-9]+H)?([0-9]+(?:[,\\.][0-9]+)?M)|([0-9]+Y)?([0-9]+M)?([0-9]+D)?T([0-9]+(?:[,\\.][0-9]+)?H)|([0-9]+Y)?([0-9]+M)?([0-9]+(?:[,\\.][0-9]+)?D)|([0-9]+Y)?([0-9]+(?:[,\\.][0-9]+)?M)|([0-9]+(?:[,\\.][0-9]+)?Y))$",
  "validationErrorMessage": "Durations should be expressed as ISO 8601 durations"
}
